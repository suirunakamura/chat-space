.side-bar
  .side-bar__userlist
    .side-bar__userlist--info
      .side-bar__userlist--info--name
        = current_user.name
      .side-bar__userlist--info--icons
        = link_to '/groups/new', class: "icon_1" do
          = icon('far', 'edit')
        = link_to edit_user_path(current_user), class: "icon_2" do
          = icon('fas', 'cog')
  .side-bar__group
    - current_user.groups.each do |group|
      .side-bar__group__box
        = link_to group_messages_path(group) do
          .side-bar__group__box--name
            =  group.name
          .side-bar__group__box--messages
            = group.show_last_message
